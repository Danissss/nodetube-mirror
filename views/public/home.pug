extends ../layout

block content

  style.
    .lead-header {
      margin-top: 137px;
      margin-bottom: 47px;
    }

    .tagline-header {
      margin-bottom: 70px;
    }

    .explainer {
      margin-top: 15px;
    }

    .pitch-header {
      font-size:30px;
    }

    .first-row {
      margin-top:35px;
    }

    .second-row {
      margin-top: 20px;
    }

    p.fw {
      font-size: 15px;
    }

    /** Redesign for narrow devices **/

    @media (max-width: 480px) {

      .lead-header {
        margin-top: 80px;
      }

      .pitch-header {
        font-size: 22px;
      }

      .row .col-sm-4 {
        margin-bottom:52px;
      }

      .first-row {
        margin-bottom: 0px;
      }

      .second-row {
        margin-top: 0px;
      }
      /* styles for mobile browsers smaller than 480px; (iPhone) */
    }

  div.container(style="text-align:center")

    h1.lead-header.fw Introducing #{brandName}
    h2.tagline-header.fw An open-source YouTube alternative powered by Node.js
    hr
